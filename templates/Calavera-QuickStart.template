{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "(0020) - Step 1 of 3: This template deploys G2 devops course environment.",
  "Parameters": {
    "KeyPairName": {
      "Description": "Public/private key pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "SubnetCIDR": {
      "Description": "CIDR block for the public subnet",
      "Type": "String",
      "Default": "10.0.0.0/19",
      "AllowedPattern": "[a-zA-Z0-9]+\\..+"
    },
    "RemoteAdminCIDR": {
      "Description": "CIDR block or IP for SSH access Note: a value of 0.0.0.0/0 will allow access from ANY ip address",
      "Default": "0.0.0.0/0",
      "Type": "String",
      "AllowedPattern": "[a-zA-Z0-9]+\\..+"
    },
    "VPCCIDR": {
      "Description": "CIDR block for the VPC",
      "Type": "String",
      "Default": "10.0.0.0/16",
      "AllowedPattern": "[a-zA-Z0-9]+\\..+"
    },
    "DNSZone": {
      "Description": "Subdomain for public DND",
      "Type": "String",
      "Default": "leansm.com"
    },
    "SubdomainName": {
      "Description": "Subdomain for public DND",
      "Type": "String",
      "Default": "curso1"
    },
    "PuppetMasterIP": {
      "Description": "IP for the Puppet master",
      "Type": "String",
      "Default": "10.0.0.10"
    },
    "PuppetAgentLinuxIP1": {
      "Description": "IP for the Linux Puppet agent",
      "Type": "String",
      "Default": "10.0.0.11"
    },
    "PuppetAgentLinuxIP2": {
      "Description": "IP for the Linux Puppet agent",
      "Type": "String",
      "Default": "10.0.0.12"
    },
    "PuppetAgentLinuxIP3": {
      "Description": "IP for the Linux Puppet agent",
      "Type": "String",
      "Default": "10.0.0.13"
    },
    "CalavDevelIP": {
      "Description": "IP for the Linux Puppet agent",
      "Type": "String",
      "Default": "10.0.0.20"
    },
    "QSS3BucketName": {
      "Type": "String",
      "AllowedPattern": "^[0-9a-zA-Z]+([0-9a-zA-Z-]*[0-9a-zA-Z])*$",
      "ConstraintDescription": "Quick Start bucket name can include numbers, lowercase letters, uppercase letters, and hyphens (-). It cannot start or end with a hyphen (-).",
      "Default": "g2-quickstart-templates",
      "Description": "S3 bucket name for the Quick Start assets. Quick Start bucket name can include numbers, lowercase letters, uppercase letters, and hyphens (-). It cannot start or end with a hyphen (-)."
    },
    "QSS3KeyPrefix": {
      "Type": "String",
      "AllowedPattern": "^[0-9a-zA-Z-/]*$",
      "ConstraintDescription": "Quick Start key prefix can include numbers, lowercase letters, uppercase letters, hyphens (-), and forward slash (/).",
      "Default": "quickstart-puppet/",
      "Description": "S3 key prefix for the Quick Start assets. Quick Start key prefix can include numbers, lowercase letters, uppercase letters, hyphens (-), and forward slash (/)."
    }
  },
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {
            "default": "Security Configuration"
          },
          "Parameters": [
            "KeyPairName",
            "RemoteAdminCIDR"
          ]
        },
        {
          "Label": {
            "default": "AWS Quick Start Configuration"
          },
          "Parameters": [
            "QSS3BucketName",
            "QSS3KeyPrefix"
          ]
        },
        {
          "Label": {
            "default": "Network Configuration"
          },
          "Parameters": [
            "VPCCIDR",
            "SubnetCIDR",
            "DNSZone",
            "SubdomainName",
            "PuppetMasterIP",
            "PuppetAgentLinuxIP1",
            "PuppetAgentLinuxIP2",
            "PuppetAgentLinuxIP3",
            "CalavDevelIP"
          ]
        }
      ],
      "ParameterLabels": {
        "KeyPairName": {
          "default": "Select a key pair:"
        },
        "RemoteAdminCIDR": {
          "default": "Source IP for remote access (e.g., 1.1.1.1/32):"
        },
        "VPCCIDR": {
          "default": "CIDR range for your VPC:"
        },
        "SubnetCIDR": {
          "default": "CIDR range for the subnet in your VPC:"
        },
        "DNSZone": {
          "default": "Domain zone:"
        },
        "SubdomainName": {
          "default": "Subdomain name:"
        },
        "CalavDevelIP": {
          "default": "IP address for Calavera Devel (>10.0.0.20) (manos,brazos,cerebro) :"
        },
        "QSS3BucketName": {
          "default": "Quick Start S3 Bucket Name:"
        },
        "QSS3KeyPrefix": {
          "default": "Quick Start S3 Key Prefix:"
        }
      }
    }
  },
  "Conditions": {
    "GovCloudCondition": {
      "Fn::Equals": [
        {
          "Ref": "AWS::Region"
        },
        "us-gov-west-1"
      ]
    }
  },
  "Resources": {
    "VPCStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Sub": [
            "https://${QSS3BucketName}.${QSS3Region}.amazonaws.com/${QSS3KeyPrefix}templates/Puppet-VPC.template",
            {
              "QSS3Region": {
                "Fn::If": [
                  "GovCloudCondition",
                  "s3-us-gov-west-1",
                  "s3"
                ]
              }
            }
          ]
        },
        "Parameters": {
          "KeyPairName": {
            "Ref": "KeyPairName"
          },
          "SubnetCIDR": {
            "Ref": "SubnetCIDR"
          },
          "VPCCIDR": {
            "Ref": "VPCCIDR"
          },
          "DNSZone": {
            "Ref": "DNSZone"
          },
          "SubdomainName": {
            "Ref": "SubdomainName"
          },
          "PuppetMasterIP": {
            "Ref": "PuppetMasterIP"
          },
          "PuppetAgentLinuxIP1": {
            "Ref": "PuppetAgentLinuxIP1"
          },
          "PuppetAgentLinuxIP2": {
            "Ref": "PuppetAgentLinuxIP2"
          },
          "PuppetAgentLinuxIP3": {
            "Ref": "PuppetAgentLinuxIP3"
          }
        }
      }
    },
    "CalaveraInstanceStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Sub": [
            "https://${QSS3BucketName}.${QSS3Region}.amazonaws.com/${QSS3KeyPrefix}templates/Calavera-Instances.template",
            {
              "QSS3Region": {
                "Fn::If": [
                  "GovCloudCondition",
                  "s3-us-gov-west-1",
                  "s3"
                ]
              }
            }
          ]
        },
        "Parameters": {
          "KeyPairName": {
            "Ref": "KeyPairName"
          },
          "SubnetId": {
            "Fn::GetAtt": [
              "VPCStack",
              "Outputs.SubnetId"
            ]
          },
          "VPC": {
            "Fn::GetAtt": [
              "VPCStack",
              "Outputs.VPC"
            ]
          },
          "VPCCIDR": {
            "Ref": "VPCCIDR"
          },
          "DNSZone": {
            "Ref": "DNSZone"
          },
          "CalavDevelIP" : {
            "Ref": "CalavDevelIP"
          },
          "SubdomainName": {
            "Ref": "SubdomainName"
          },
          "RemoteAdminCIDR": {
            "Ref": "RemoteAdminCIDR"
          },
          "QSS3BucketName": {
            "Ref": "QSS3BucketName"
          },
          "QSS3KeyPrefix": {
            "Ref": "QSS3KeyPrefix"
          }
        }
      }
    }
  }
}
