                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join":
                                [
                                    "",
                                    [
                                        "#!/bin/bash -e\n",
                                        "export LC_ALL=C\n",
                                        "export PATH=/usr/local/bin:$PATH\n",
                                        "sed -i 's/.*DPkg/#&/' /etc/apt/apt.conf.d/70debconf\n",
                                        "hostname linuxagent.example.com\n",
                                        "apt-get update\n",
                                        "apt-get install -y python-pip\n",
